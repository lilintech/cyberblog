---
import aboutImg from "@/assets/cat-error.gif";
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";

const meta = {
	description: "Oops! It looks like this page is lost in space!",
	title: "Oops! You found a missing page!",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">404 | Oops something went wrong</h1>
	<p class="mb-8">Woah! Looks like the path you entered does not exist...<br>You can watch Diana for me while finding your way back :)</p>
	<div class="my-4 grid justify-center">
		<Image
			alt="A gif of a sleeping cat"
			loading="eager"
			src={aboutImg}
		/>
	</div>
</PageLayout>
